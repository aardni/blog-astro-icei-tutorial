---
import Layout from "../layouts/Layout.astro";
import SearchBar from "../components/SearchBar";

import { getCollection } from "astro:content";
const posts = await getCollection("blog");

posts.sort(
  (a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
);
---

<Layout>
  <div class="bg-white py-12">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
      <div class="mx-auto max-w-2xl lg:mx-0 mb-4">
        <h2
          class="text-4xl font-semibold tracking-tight text-pretty text-gray-900 sm:text-5xl"
        >
          Blog
        </h2>
        <p class="mt-2 text-lg/8 text-gray-600">
          Learn how to grow your business with our expert advice.
        </p>
      </div>
      <SearchBar client:load />
      <div
        class="mx-auto mt-6 grid max-w-2xl grid-cols-1 gap-x-8 gap-y-16 border-t border-gray-200 pt-4 sm:mt-8 sm:pt-8 lg:mx-0 lg:max-w-none lg:grid-cols-3"
      >
        {
          posts.map((post) => (
            <a
              href={`/blog/${post.id}`}
              class="group block"
              data-post
              data-title={post.data.title}
              data-description={post.data.description}
              data-category={post.data.category || ""}
              data-author={post.data.author || ""}
            >
              <article class="flex max-w-xl flex-col items-start justify-between">
                <div class="relative w-full overflow-hidden rounded-xl">
                  <img
                    src={post.data.image || "src/assets/images/collectetri.jpg"}
                    alt={post.data.title}
                  />
                </div>
                <div class="flex items-center gap-x-4 text-xs mt-4">
                  <time datetime={post.data.date} class="text-gray-500">
                    {new Date(post.data.date).toLocaleDateString("id-ID", {
                      year: "numeric",
                      month: "short",
                      day: "numeric",
                    })}
                  </time>
                  <p class="relative z-10 rounded-full bg-gray-50 px-3 py-1.5 font-medium text-gray-600 hover:bg-gray-100">
                    {post.data.category || "Uncategorized"}
                  </p>
                  <p class="px-3 py-1.5 font-medium text-gray-600">
                    {post.data.readingTime || "5 min read"}
                  </p>
                </div>
                <div class="group relative grow">
                  <h3 class="mt-3 text-lg/6 font-semibold text-gray-900 group-hover:text-gray-600">
                    <p>
                      <span class="absolute inset-0" />
                      {post.data.title}
                    </p>
                  </h3>
                  <p class="mt-5 line-clamp-3 text-sm/6 text-gray-600">
                    {post.data.description}
                  </p>
                </div>
                <div class="mt-2 flex items-center gap-2 text-gray-600">
                  {post.data.tags &&
                    post.data.tags.length > 0 &&
                    post.data.tags
                      .slice(0, 3)
                      .map((tag: string) => <p>#{tag}</p>)}
                </div>
                <div class="relative mt-8 flex items-center gap-x-4 justify-self-end">
                  <img
                    src={
                      post.data.authorImage ||
                      "https://images.unsplash.com/photo-1573497019940-1c28c88b4f3e?w=150&h=150&fit=crop&crop=face"
                    }
                    alt={post.data.author || "Author"}
                    class="size-10 rounded-full bg-gray-50"
                  />
                  <div class="text-sm/6">
                    <p class="font-semibold text-gray-900">
                      <p>
                        <span class="absolute inset-0" />
                        {post.data.author || "Author"}
                      </p>
                    </p>
                    <p class="text-gray-600">
                      {post.data.authorRole || "Writer"}
                    </p>
                  </div>
                </div>
              </article>
            </a>
          ))
        }
      </div>
    </div>
  </div>
</Layout>
